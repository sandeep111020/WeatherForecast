<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linlay"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">





        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Wistm Weather" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="TextView" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/predict"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:textSize="37dp"
                android:textStyle="bold"
                android:text="TextView" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_actionBar1"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="130dp"
                android:layout_gravity="right"
                android:visibility="gone"
                android:scaleType="centerCrop"

                app:lottie_autoPlay="true"
                app:lottie_fileName="73677-sun-laughing-emoji.json"
                app:lottie_loop="true" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_actionBar2"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="130dp"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_fileName="73473-sunclouds.json"
                app:lottie_loop="true" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_actionBar3"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="130dp"
                android:layout_gravity="right"
                android:visibility="gone"


                app:lottie_autoPlay="true"
                app:lottie_fileName="37476-rainstorm.json"
                app:lottie_loop="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/l1"

                android:layout_weight="1">

                <TextView
                    android:id="@+id/d1"
                    android:text="ffnds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
